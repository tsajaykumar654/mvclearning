                                    </a>*@

                                @Html.ActionLink("Logout", "Logout", "Home")
                            </li>
                            <li class="separator hidden-lg"></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12" style="width:auto">
                            <div class="card">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="#">
                                    Home
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Company
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Portfolio
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Blog
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="copyright pull-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script> <a href="#">My MVC App</a>
                    </p>
                </div>
            </footer>

        </div>
    </div>    

    @Scripts.Render("~/bundles/Template")
    @Scripts.Render("~/Content/login")


    @RenderSection("scripts", required: false)

</body>
</html>

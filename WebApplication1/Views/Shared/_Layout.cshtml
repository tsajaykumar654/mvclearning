                            <a href="user.html">
                                <i class="pe-7s-user"></i>
                                <p>User Profile</p>
                            </a>
                        </li>*@

                    <li>  <i class="pe-7s-note2"></i>@Html.ActionLink("CSPDetails", "Index", "CSPDetails")</li>
                    @*<li>
                            <a href="table.html">
                                <i class="pe-7s-note2"></i>
                                <p>Table List</p>
                            </a>
                        </li>*@
                    <li><i class="pe-7s-news-paper"></i>@Html.ActionLink("CSPPunch", "Index", "CSPPunch")</li>
                    @*<li>
                            <a href="typography.html">
                                <i class="pe-7s-news-paper"></i>
                                <p>Typography</p>
                            </a>
                        </li>*@
                    <li><i class="pe-7s-science"></i>@Html.ActionLink("Transactions", "Index", "Transactions")</li>

